<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="io.futurestud.tutorials.picasso"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.UsageExampleAdapter"
            android:label="Adapter Example"/>

        <activity
            android:name=".ui.activities.UsageExampleSimpleLoading"
            android:label="Simple Loading Example"/>

        <activity
            android:name=".ui.activities.UsageExamplePlaceholdersAndErrors"
            android:label="Placeholders Example"/>


    </application>

</manifest>
